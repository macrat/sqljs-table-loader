{
  "name": "sqljs-table-loader",
  "version": "1.0.0",
  "description": "CSV/xlsx table loader for sql.js",
  "main": "dist/sqljs-table-loader",
  "files": [
    "README.md",
    "LICENSE",
    "example.js",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "npm-run-all test:*",
    "test:lint": "eslint src/",
    "test:unit": "cross-env NODE_ENV=development nyc --require '@babel/register' --reporter lcov --reporter text mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macrat/sqljs-table-loader.git"
  },
  "author": "MacRat <m@crat.jp>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/macrat/sqljs-table-loader/issues"
  },
  "homepage": "https://github.com/macrat/sqljs-table-loader#readme",
  "dependencies": {
    "xlsx": "^0.14.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "babel-preset-power-assert": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "power-assert": "^1.6.1",
    "rollup": "^1.11.3"
  },
  "optionalDependencies": {
    "sql.js": "^1.0.0"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-env",
          "power-assert"
        ],
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "arrow-body-style": [
        "warn",
        "as-needed"
      ],
      "arrow-parens": [
        "warn",
        "as-needed"
      ],
      "eqeqeq": "error",
      "indent": [
        "error",
        4
      ],
      "init-declarations": [
        "error",
        "always"
      ],
      "no-catch-shadow": "warn",
      "no-console": "off",
      "no-floating-decimal": "error",
      "no-implicit-coercion": "error",
      "no-label-var": "error",
      "no-self-compare": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "warn",
      "no-throw-literal": "error",
      "no-unused-vars": "off",
      "no-var": "error",
      "prefer-const": "warn",
      "prefer-promise-reject-errors": "error",
      "quotes": [
        "warn",
        "single"
      ],
      "space-before-blocks": [
        "warn",
        {
          "functions": "always",
          "keywords": "always",
          "classes": "always"
        }
      ],
      "valid-jsdoc": "warn",
      "yoda": "warn"
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    }
  }
}
